<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <form class="form" action="/<%= user.id %>/update" method="POST">
      <input
        type="text"
        name="firstName"
        value="<%= user.firstName %>"
        required
      />
      <input
        type="text"
        name="lastName"
        value="<%= user.lastName %>"
        required
      />
      <label for="email">Email: </label>
      <input
        type="email"
        name="email"
        id="email"
        value="<%= user.email %>"
        required
      />
      <label for="age">Age:</label>
      <input type="number" name="age" id="age" value="<%= user.age %>" />
      <label for="bio">Bio:</label>
      <textarea
        name="bio"
        id="bio"
        cols="30"
        rows="10"
        placeholder="insert bio here"
      >
      <%= user.bio %>
    </textarea
      >
      <button type="submit">Update User</button>
    </form>
    <a href="/">Back to home</a>
  </body>
</html>
